---
import { Icon } from 'astro-icon/components';
import Container  from '../core/Container.astro';
import Plug from './Plug.astro';

const { footerSocials, footerLists, copyrightName, background, color, showPlug: showPlug = true } =
  Astro.props;
---

<footer
  style={background && `--footer-bg:${background}; --footer-color:${color}`}
>
  <Container>
    <div class="footer-grid__container">
      <div class="footer-brand__container">
        <div>
          <slot name="logo" />
        </div>
        <div class="footer-contact__container">
          <p>
            <Icon name="mdi:account" width={20} height={20} />
            <span>Marco Gerhards</span>
          </p>
          <p>
            <Icon name="mdi:map-marker" width={20} height={20} />
            <span>Tullastrasse 67, 79108 Freiburg</span>
          </p>
          <p>
            <Icon name="mdi:phone" width={20} height={20} />
            <a href="tel:+491786931585">0178 6931585</a>
          </p>
          <p>
            <Icon name="mdi:email" width={20} height={20} />
            <a href="mailto:marco@gerhardscoaching.de">marco@gerhardscoaching.de</a>
          </p>
        </div>
        <ul class="footer-socials__list">
          {
            footerSocials.map((social) => (
              <li class="footer-socials__item">
                <a
                  href={social.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="footer-socials__link"
                  title={`Open ${social.name} profile`}
                >
                  <Icon name={social.icon} width={24} height={24} />
                </a>
              </li>
            ))
          }
        </ul>
      </div>
      {
        footerLists.map((list) => (
          <div>
            <p><strong>{list.title}</strong></p>
            <ul class="footer-link__list">
              {list.items.map((item) => (
                <li>
                  <a href={item.slug}>{item.title}</a>
                </li>
              ))}
            </ul>
          </div>
        ))
      }
    </div>
    <div class="footer-copyright__container">
      {showPlug && <Plug/>}
      <p>&copy; {new Date().getFullYear()} {copyrightName}</p>
    </div>

  </Container>
</footer>

<style>
  footer {
    --footer-bg: var(--theme-surface-1);
    --footer-color: var(--theme-on-surface-1);
    min-height: 30vh;
    background-color: var(--footer-bg);
    color: var(--footer-color);
    border-top-left-radius: var(--theme-shape-radius);
    border-top-right-radius: var(--theme-shape-radius);
    padding: 4rem 0 2rem 0;
  }
  .footer-grid__container {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr;
    gap: 4rem;
    margin-bottom: 3rem;
  }
  .footer-brand__container {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }
  .footer-contact__container {
    font-size: var(--font-size-sm);
    line-height: 1.6;
  }
  .footer-contact__container p {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin: 0.5rem 0;
  }
  .footer-contact__container a {
    color: inherit;
    text-decoration: none;
    transition: color var(--theme-transition);
  }
  .footer-contact__container a:hover {
    color: var(--theme-primary);
    text-decoration: underline;
  }
  .footer-socials__list {
    margin: 0.5rem 0;
    padding: 0;
    display: flex;
    list-style: none;
    gap: 1rem;
  }
  .footer-socials__link {
    color: inherit;
    opacity: 0.8;
    transition: opacity var(--theme-transition), color var(--theme-transition);
  }
  .footer-socials__link:hover {
    opacity: 1;
    color: var(--theme-primary);
  }
  .footer-link__list {
    margin: 1rem 0 0 0;
    padding: 0;
    list-style: none;
  }
  .footer-link__list li {
    margin-bottom: 0.75rem;
  }
  .footer-link__list li a {
    text-decoration: none;
    color: inherit;
    font-size: var(--font-size-sm);
    opacity: 0.8;
    transition: opacity var(--theme-transition), color var(--theme-transition);
  }
  .footer-link__list li a:hover {
    opacity: 1;
    color: var(--theme-primary);
  }
  .footer-copyright__container {
    display: flex;
    flex-direction: column;
    align-items: center;
    border-top: 1px solid rgba(0, 0, 0, 0.1);
    padding-top: 2rem;
  }
  .footer-copyright__container p {
    font-size: var(--font-size-xs);
    opacity: 0.7;
  }
  @media (max-width: 768px) {
    .footer-grid__container {
      grid-template-columns: 1fr 1fr;
      gap: 2rem;
    }
    .footer-brand__container {
      grid-column: 1 / -1;
    }
  }
  @media (max-width: 600px) {
    .footer-grid__container {
      grid-template-columns: 1fr;
    }
  }
</style>